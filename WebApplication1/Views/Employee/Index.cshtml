@model List<Employee>

<table>
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Designation</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.Id</td>
                <td>@emp.Name</td>
                <td>@emp.Desgination</td>
                <td><a href="@Url.Action("Edit", "Employee", new { employeeId = emp.Id })">Edit</a></td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Add", "Employee")">Add New Record</a>